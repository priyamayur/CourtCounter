<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#B71C1C"
                android:endColor="#EF5350"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#222222" />
            <corners
                android:radius="2000dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item android:state_pressed="false" >
        <shape android:shape="rectangle">

            <gradient
                android:startColor="@color/colorDarkPurple"
                android:endColor="#FF6F00"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#222222" />
            <corners
                android:radius="2000dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>